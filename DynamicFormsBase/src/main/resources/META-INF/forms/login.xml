<?xml version="1.0" encoding="utf-8"?>
<df:dynaform xmlns:df="http://www.dynamicforms.mx/dynaform-1.0">
  <df:bundle baseName="META-INF/bundles/forms/login" var="bundle"/>
  <df:row>
    <df:input id="username" colspan="1" rowspan="1" required="true" label="${bundle.username}"
    placeholder="${bundle.username}"/>
  </df:row>
  <df:row>
    <df:password id="password" colspan="1" rowspan="1" required="true"
    placeholder="${bundle.password}" label="${bundle.password}" minLength="8"/>
  </df:row>
  
</df:dynaform>
