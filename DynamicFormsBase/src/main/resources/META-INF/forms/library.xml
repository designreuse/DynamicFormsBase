<?xml version="1.0" encoding="utf-8"?>
<df:dynaform xmlns:df="http://www.dynamicforms.mx/dynaform-1.0">
  <df:bundle baseName="META-INF/bundles/forms/library" var="bundle"/>
  <df:row>
  	<df:label text="${bundle.Author}" for="Author"/>
    <df:input id="Author" colspan="1" rowspan="1" required="true"/>
    <df:label text="${bundle.ISBN}" for="ISBN"/>
    <df:input id="ISBN" colspan="1" rowspan="1" required="true"/>
  </df:row>
  <df:row>
  	<df:label text="${bundle.Title}" for="Title"/>
    <df:input id="Title" colspan="3" rowspan="1" required="true"/>
  </df:row>
  <df:row>
  	<df:label text="${bundle.Publisher}"/>
    <df:input id="Publisher" colspan="1" rowspan="1"/>
    <df:label text="${bundle.PublishedOn}" for="PublishedOn"/>
    <df:calendar id="PublishedOn" colspan="1" rowspan="1"/>
  </df:row>
  <df:row>
  	<df:label text="${bundle.Language}"/>
	<df:select id="Language" colspan="1" rowspan="1">
		<df:selectItem>
			<df:label>English</df:label>
			<df:value>en</df:value>
		</df:selectItem>
		<df:selectItem>
			<df:label>German</df:label>
			<df:value>de</df:value>
		</df:selectItem>
		<df:selectItem>
			<df:label>Russian</df:label>
			<df:value>ru</df:value>
		</df:selectItem>
		<df:selectItem>
			<df:label>Turkish</df:label>
			<df:value>tr</df:value>
		</df:selectItem>
	</df:select>
	<df:label text="${bundle.Description}"/>
    <df:textarea id="Description" colspan="1" rowspan="2"/>
  </df:row>
  <df:row>
  	<df:label text="${bundle.Rating}"/>
    <df:rating id="Rating" colspan="1" rowspan="1"/>
  </df:row>
</df:dynaform>
